<UserControl x:Class="ET3260_Project.Views.HomeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ET3260_Project.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Trang chủ hệ thống" FontSize="20" FontWeight="Black" Foreground="Black" Margin="10"/>
                <TextBlock Text="Thiên tai" FontSize="18" FontWeight="Bold" Foreground="Black" Margin="10"/>
                <StackPanel Orientation="Horizontal" >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MouseLeftButtonDown="DiemTruotLo">
                        <Image Source="/Resources/Images/satlo.png" Width="40" Height="40"/>
                        <TextBlock Text="Điểm trượt lở" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MouseLeftButtonDown="DiemLuQuet">
                        <Image Source="/Resources/Images/flood.png" Width="40" Height="40"/>
                        <TextBlock Text="Điểm lũ quét" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/Images/clipboard.png" Width="30" Height="40"/>
                        <TextBlock Text="Báo cáo thiên tai" FontSize="16" />
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Dịch bệnh" FontSize="18" FontWeight="Bold" Foreground="Black" Margin="10"/>
                <StackPanel Orientation="Horizontal" >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MouseLeftButtonDown="LoaiDichBenh">
                        <Image Source="/Resources/Images/virus.png" Width="40" Height="40"/>
                        <TextBlock Text="Loại dịch bệnh" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MouseLeftButtonDown="TrieuChung">
                        <Image Source="/Resources/Images/pharmacy.png" Width="40" Height="40"/>
                        <TextBlock Text="Triệu chứng lâm sàng" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/Images/contagion.png" Width="40" Height="40"/>
                        <TextBlock Text="Ổ dịch" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/Images/injection.png" Width="40" Height="40"/>
                        <TextBlock Text="Tiêm phòng" FontSize="16" />
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Chăn nuôi" FontSize="18" FontWeight="Bold" Foreground="Black" Margin="10"/>
                <StackPanel Orientation="Horizontal" >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MouseLeftButtonDown="DiemTruotLo">
                        <Image Source="/Resources/Images/clinic.png" Width="40" Height="40"/>
                        <TextBlock Text="Chi cục thú y" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MouseLeftButtonDown="DiemLuQuet">
                        <Image Source="/Resources/Images/medicine.png" Width="40" Height="40"/>
                        <TextBlock Text="Đại lý bán thuốc" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/Images/smart.png" Width="40" Height="40"/>
                        <TextBlock Text="Khu tạm giữ, tiêu hủy" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/Images/meat-grinder.png" Width="40" Height="40"/>
                        <TextBlock Text="Cơ sở giết mổ" FontSize="16" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MouseLeftButtonDown="DiemTruotLo">
                        <Image Source="/Resources/Images/livestock.png" Width="40" Height="40"/>
                        <TextBlock Text="Cơ sở chăn nuôi" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MouseLeftButtonDown="DiemLuQuet">
                        <Image Source="/Resources/Images/farm.png" Width="40" Height="40"/>
                        <TextBlock Text="Hộ chăn nuôi" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/Images/regulation.png" Width="40" Height="40"/>
                        <TextBlock Text="Tổ chức chứng nhận" FontSize="16" />
                    </StackPanel>
                    <Separator Width="20" Background="Transparent"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/Images/crushing.png" Width="40" Height="40"/>
                        <TextBlock Text="Cơ sở chế biến" FontSize="16" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
             
    
</UserControl>
