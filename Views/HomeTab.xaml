<UserControl x:Class="ET3260_Project.Views.HomeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ET3260_Project.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Aqua">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Hệ thống quản lý dịch bệnh và thiên tai" FontSize="20" FontWeight="Black" Foreground="Black" Margin="10"/>
            <TextBlock Text="Thiên tai" FontSize="18" FontWeight="Bold" Foreground="Black" Margin="10"/>
            <StackPanel Orientation="Horizontal" >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                    <Image Source="/Resources/Images/satlo.png" Width="40" Height="40"/>
                    <TextBlock Text="Điểm trượt lở" FontFamily="/font/#Averta Std CY Semibold" FontSize="16" />
                </StackPanel>
                <Separator Width="20" Background="Transparent"/>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                    <Image Source="/Resources/Images/flood.png" Width="40" Height="40"/>
                    <TextBlock Text="Điểm lũ quét" FontFamily="/font/#Averta Std CY Semibold" FontSize="16" />
                </StackPanel>
                <Separator Width="20" Background="Transparent"/>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                    <Image Source="/Resources/Images/clipboard.png" Width="30" Height="40"/>
                    <TextBlock Text="Báo cáo thiên tai" FontFamily="/font/#Averta Std CY Semibold" FontSize="16" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
