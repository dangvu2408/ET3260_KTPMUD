<Window x:Class="ET3260_Project.Views.updatePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ET3260_Project.Views"
        mc:Ignorable="d"
        Title="Cập nhật mật khẩu" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Nhập mật khẩu cũ" Foreground="Black" Margin="10 0 10 0"/>
            <PasswordBox x:Name="oldpass" Password="" Padding="5" Margin="10 0 10 0" />
            <Label Content="Nhập mật khẩu mới" Foreground="Black" Margin="10 0 10 0"/>
            <PasswordBox x:Name="newpass" Password="" Padding="5" Margin="10 0 10 0" />

            <Border CornerRadius="5" Background="Blue"  Padding="2" Margin="10">
                <Button Content="Cập nhật mật khẩu" Height="25" Background="Transparent" BorderThickness="0" Foreground="White" Click="UpdatePassword_Btn"/>
            </Border>

        </StackPanel>
    </Grid>
</Window>
