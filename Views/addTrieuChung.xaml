<Window x:Class="ET3260_Project.Views.addTrieuChung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ET3260_Project.Views"
        mc:Ignorable="d"
        Title="Thêm triệu chứng lâm sàng" Height="250" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Tên triệu chứng" Foreground="Black" Margin="10 0 10 0"/>
            <TextBox x:Name="name" Text="" Padding="5" Margin="10 0 10 0" />
            <Label Content="Mô tả" Foreground="Black" Margin="10 0 10 0" />
            <TextBox x:Name="describe" Height="81" Text="" Padding="5" Margin="10 0 10 0" />

            <Border CornerRadius="5" Background="Blue"  Padding="2" Margin="10">
                <Button Content="Thêm" Height="25" Background="Transparent" BorderThickness="0" Foreground="White" Click="addTrieuChung_btn"/>
            </Border>

        </StackPanel>
    </Grid>
</Window>
