<Window x:Class="ET3260_Project.Views.addChiCucThuY"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ET3260_Project.Views"
        mc:Ignorable="d"
        Title="Thêm chi cục thú y" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Tên chi cục thú y" Foreground="Black" Margin="10 0 10 0"/>
            <TextBox x:Name="name" Text="" Padding="5" Margin="10 0 10 0" />
            
            <Label Content="Địa chỉ chi cục" Foreground="Black" Margin="10 0 10 0" />
            <TextBox x:Name="address" Text="" Padding="5" Margin="10 0 10 0" />
            
            <Label Content="Số điện thoại liên lạc" Foreground="Black" Margin="10 0 10 0" />
            <TextBox x:Name="number" Text="" Padding="5" Margin="10 0 10 0" />

            <Border CornerRadius="5" Background="Blue"  Padding="2" Margin="10">
                <Button Content="Thêm" Height="25" Background="Transparent" BorderThickness="0" Foreground="White" Click="addChiCucThuY_Btn"/>
            </Border>

        </StackPanel>
    </Grid>
</Window>
