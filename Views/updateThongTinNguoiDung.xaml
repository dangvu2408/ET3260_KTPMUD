<Window x:Class="ET3260_Project.Views.updateThongTinNguoiDung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ET3260_Project.Views"
        mc:Ignorable="d"
        Title="updateThongTinNguoiDung" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Email" Foreground="Black" Margin="10 0 10 0"/>
            <TextBox x:Name="email" Text="" Padding="5" Margin="10 0 10 0" />
            <Label Content="Tên đầy đủ của người dùng" Foreground="Black" Margin="10 0 10 0"/>
            <TextBox x:Name="name" Text="" Padding="5" Margin="10 0 10 0" />
            
            <Label Content="Vai trò" Foreground="Black" Margin="10 0 10 0"/>
            <ComboBox x:Name="UserDropdown"
                Height="27"
                IsEditable="True"
                Margin="10 0 10 0"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Quản trị" />
                <ComboBoxItem Content="Cán bộ nghiệp vụ" />
            </ComboBox>
            <Border CornerRadius="5" Background="Blue"  Padding="2" Margin="10">
                <Button Content="Cập nhật thông tin" Height="25" Background="Transparent" BorderThickness="0" Foreground="White" Click="UpdateUser_Btn"/>
            </Border>

        </StackPanel>
    </Grid>
</Window>
