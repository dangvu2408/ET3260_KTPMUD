<Window x:Class="ET3260_Project.Views.addLoaiDichBenh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ET3260_Project.Views"
        mc:Ignorable="d"
        Title="Thêm loại dịch bệnh" Height="250" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Tên loại dịch bệnh" Foreground="Black" Margin="10 0 10 0"/>
            <TextBox x:Name="name" Text="" Padding="5" Margin="10 0 10 0" />
            <Label Content="Triệu chứng" Foreground="Black" Margin="10 0 10 0"/>
            <ComboBox x:Name="comboBox" Height="30" Margin="10 0 10 0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" 
                              IsChecked="{Binding IsSelected}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="Mô tả" Foreground="Black" Margin="10 0 10 0" />
            <TextBox x:Name="address" Height="75" Text="" Padding="5" Margin="10 0 10 0" />
            
            <Border CornerRadius="5" Background="Blue"  Padding="2" Margin="10">
                <Button Content="Thêm" Width="150" Height="25" Background="Transparent" BorderThickness="0" Foreground="White"/>
            </Border>

        </StackPanel>
    </Grid>
</Window>
