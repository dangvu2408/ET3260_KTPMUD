<Window x:Class="ET3260_Project.Views.SigninWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ET3260_Project.Views"
        mc:Ignorable="d"
        Title="Quản lý dịch bệnh và thiên tai - Đăng kí" Height="450" Width="800">
    <Grid>
        <Image Source="/Resources/Images/background.jpg" Stretch="Fill" />
        <Border Width="250" Background="#FF257CA9" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Padding="20"
            CornerRadius="10">

            <StackPanel>
                <TextBlock Text="ĐĂNG KÍ HỆ THỐNG" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <Label Content="Email" Foreground="White" />
                <TextBox x:Name="em" Text="" Padding="5" />
                <Label Content="Tên đầy đủ người dùng" Foreground="White" />
                <TextBox x:Name="un" Text="" Padding="5" />
                <Label Content="Password" Foreground="#FFF" />
                <PasswordBox x:Name="ps" Password="" Padding="5" />
                <Label Content="Vai trò" Foreground="#FFF" />
                <ComboBox Name="UserDropdown"
                  Height="30"
                  IsEditable="True"
                  Margin="0,0,0,0"
                  VerticalAlignment="Top">
                    <ComboBoxItem Content="Quản trị" />
                    <ComboBoxItem Content="Cán bộ nghiệp vụ" />
                </ComboBox>
                
                
                <Border CornerRadius="5" Background="Blue"  Padding="2" Margin="0 10 0 0">
                    <Button Content="ĐĂNG KÍ" Width="150" Height="25" Background="Transparent" BorderThickness="0" Foreground="White"/>
                </Border>
                
            </StackPanel>
        </Border>


    </Grid>
</Window>
