<Window x:Class="ET3260_Project.Views.addLichTiemPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ET3260_Project.Views"
        mc:Ignorable="d"
        Title="Thêm lịch tiêm phòng" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Tên vaccine" Foreground="Black" Margin="10 0 10 0"/>
            <TextBox x:Name="name" Text="" Padding="5" Margin="10 0 10 0" />
            <Label Content="Danh sách ổ dịch tiêm" Foreground="Black" Margin="10 0 10 0"/>
            <ComboBox x:Name="comboBox" Height="30" Margin="10 0 10 0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" 
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Checked="CheckBox_Checked"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="Ngày tiêm" Foreground="Black" Margin="10 0 10 0" />
            <TextBox x:Name="date" Text="" Padding="5" Margin="10 0 10 0" />
            <Label Content="Số lượng mũi tiêm" Foreground="Black" Margin="10 0 10 0" />
            <TextBox x:Name="number" Text="" Padding="5" Margin="10 0 10 0" />

            <Border CornerRadius="5" Background="Blue"  Padding="2" Margin="10">
                <Button Content="Thêm" Height="25" Background="Transparent" BorderThickness="0" Foreground="White" Click="addLichTiemPhong_Btn"/>
            </Border>

        </StackPanel>
    </Grid>
</Window>
