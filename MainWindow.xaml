<Window x:Class="ET3260_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ET3260_Project"
        mc:Ignorable="d"
        Title="Quản lý dịch bệnh và thiên tai" Height="450" Width="800">
    <Grid>
        <Image Source="Resources/Images/background.jpg" Stretch="Fill" />
        <Border Width="250" Background="#FF257CA9" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20"
                CornerRadius="10">

            <StackPanel>
                <TextBlock Text="HỆ THỐNG QUẢN LÝ" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="DỊCH BỆNH VÀ THIÊN TAI" FontSize="16" FontWeight="Bold" Foreground="White"/>
                <Label Content="Email" Foreground="White" />
                <TextBox x:Name="un" Text="" Padding="5" />
                <Label Content="Password" Foreground="#FFF" />
                <PasswordBox x:Name="ps" Password="" Padding="5" />

                <Border CornerRadius="5" Background="Blue"  Padding="2" Margin="0 10 0 0">
                    <Button Content="ĐĂNG NHẬP" Width="150" Height="25" Background="Transparent" BorderThickness="0" Foreground="White" Click="LoginSuccess"/>
                </Border>

                <Border CornerRadius="5" Background="White" Padding="2" Margin="0 10 0 0">
                    <Button Content="ĐĂNG KÍ" Width="150" Height="25" Background="Transparent" BorderThickness="0" Click="RegisterButton_Click"/>
                </Border>
            </StackPanel>
        </Border>
        
        
    </Grid>
</Window>
